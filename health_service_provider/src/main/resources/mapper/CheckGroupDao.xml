<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.jiang.health_service_provider.dao.CheckGroupDao">
    <insert id="add" parameterType="com.jiang.pojo.CheckGroup">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            select  LAST_INSERT_ID()
        </selectKey>
        insert into t_checkgroup(
                code,name,sex,helpCode,remark,attention)
        values
        (#{code},#{name},#{sex},#{helpCode},#{remark},#{attention})
    </insert>


    <insert id="setCheckGroupAndCheckItem" parameterType="hashmap">
        insert into t_checkgroup_checkitem(checkgroup_id,checkitem_id)
        values
        (#{checkgroup_id},#{checkitem_id})
    </insert>


    <select id="selectByCondition" parameterType="string" resultType="com.jiang.pojo.CheckGroup">
        select * from t_checkgroup
        <if test="value != null and value.length > 0">
            where code = #{code} or name = #{name} or helpCode = #{value}
        </if>
    </select>

    <select id="findById" resultType="com.jiang.pojo.CheckGroup">
        select * from t_checkgroup where id = #{id}
    </select>

    <select id="findCheckItemIdsByCheckGroupId" parameterType="integer" resultType="integer">
        select checkitem_id
        from t_checkgroup_checkitem
        where checkgroup_id = #{id}
    </select>

    <delete id="deleteAssociation" parameterType="integer">
        delete
        from t_checkgroup_checkitem
        where checkgroup_id = #{id}
    </delete>

    <!--编辑-->
    <update id="edit" parameterType="com.jiang.pojo.CheckGroup">
        update t_checkgroup
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="helpCode != null">
                helpCode = #{helpCode},
            </if>
            <if test="attention != null">
                attention = #{attention},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--    查询所有-->
    <select id="findAll" resultType="com.jiang.pojo.CheckGroup">
        select *
        from t_checkgroup
    </select>

    <delete id="delete" parameterType="integer">
        delete
        from t_checkgroup
        where id = #{id}
    </delete>

    <resultMap id="baseResultMap" type="com.jiang.pojo.CheckGroup">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="helpCode" property="helpCode"/>
        <result column="sex" property="sex"/>
        <result column="remark" property="remark"/>
        <result column="attention" property="attention"/>
    </resultMap>

    <resultMap id="findByIdResultMap" type="com.jiang.pojo.CheckGroup" extends="baseResultMap">
        <collection property="checkItems"
                    javaType="ArrayList"
                    ofType="com.jiang.pojo.CheckItem"
                    column="id"
                    select="com.jiang.health_service_provider.dao.CheckItemDao.findCheckItemById">
        </collection>
    </resultMap>
    
    <select id="findCheckGroupById" parameterType="integer" resultMap="findByIdResultMap" >
        select * from t_checkgroup
        where id
                  in (select checkgroup_id from t_setmeal_checkgroup where setmeal_id=#{id})
    </select>

</mapper>