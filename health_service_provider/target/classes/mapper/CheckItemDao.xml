<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.jiang.health_service_provider.dao.CheckItemDao">
    <!--添加checkItem-->
    <insert id="add" parameterType="com.jiang.pojo.CheckItem">
        insert into t_checkitem(code, name, sex, age, price, type, remark, attention)
        values (#{code}, #{name}, #{sex}, #{age}, #{price}, #{type}, #{remark}, #{attention})
    </insert>

    <!--查询一个checkItem-->
    <select id="findOne" resultType="com.jiang.pojo.CheckItem" parameterType="integer">
        select  * from t_checkitem where id = #{id}
    </select>

    <!--条件查询-->
    <select id="selectByCondition" parameterType="String" resultType="com.jiang.pojo.CheckItem">
        select * from t_checkitem
        <if test="value != null and value.length > 0">
            where code = #{value} or name like #{value}
        </if>
    </select>

    <!--根据检查项ID统计数据量-->
    <select id="findCountByCheckItemId" parameterType="integer" resultType="long">
        select count(*)
        from t_checkgroup_checkitem
        where checkitem_id = #{checkitem_id}
    </select>

    <!--删除指定id-->
    <delete id="deleteById" parameterType="int">
        delete
        from t_checkitem
        where id = #{id}
    </delete>

    <!--查询所有-->
    <select id="findAll" resultType="com.jiang.pojo.CheckItem">
        select * from t_checkitem;
    </select>

    <!--修改信息-->
    <update id="edit" parameterType="com.jiang.pojo.CheckItem">
        update t_checkitem
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="attention != null">
                attention = #{attention},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>